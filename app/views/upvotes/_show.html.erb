<% if user_signed_in? %>
  <% if current_user.voted_for?(comment) %>
    <%= link_to upvote_path(current_user.upvotes.where(comment: comment).first), remote: true, method: :delete, class: 'product-upvote product-upvoted' do %>
      <div class="product-arrow"></div>
      <div class="product-count"><%= comment.upvotes.size %></div>
    <% end %>
  <% else %>
    <%= link_to upvotes_path(comment_id: comment.id), remote: true, method: :post, class: 'product-upvote' do %>
      <div class="product-arrow"></div>
      <div class="product-count"><%= comment.upvotes.size %></div>
    <% end %>
  <% end %>

<% else %>
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class="product-count"><%= comment.upvotes.size %></div>
  </div>
<% end %>
